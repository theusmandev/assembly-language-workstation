{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run NASM + DOSBox",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "nasm -f bin \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.com\" && dosbox -c \"mount c \\\"${fileDirname}\\\"\" -c \"c:\" -c \"${fileBasenameNoExtension}\" -c \"pause\" -c \"exit\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}




